[flake8]
exclude =
    .git,
    __pycache__,
    build,
    dist,
    docs/source,
    resources/debug_findpv.py
    dev_*

# E501 line too long
# many long lines in python code
# most in documentation
# some in test cases
max-line-length = 88
# TODO: re-enable E501 error
ignore: E226,E402,E501,E741,F401,F403,W503,W504
